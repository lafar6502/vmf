
@{
    ViewBag.Title = "Index";
    var id = Guid.NewGuid().ToString("N");
}

<h2>Index</h2>


<div class="vfm_form" id="@id">
    <h2>{{Values.FirstName}} {{Values.LastName}} of age {{Values.Age}}</h2>
    <h3>Pleci: {{Values.Sex}}</h3>

    <div class="row">
        <div class="col-md-4">
            <vmf-field v-bind:context="Context.LastName" v-model="Values.LastName"></vmf-field>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <vmf-field-lbl v-bind:context="Context.FirstNameFld" v-model="Values.FirstName"></vmf-field-lbl>
        </div>
        <div class="col-md-3">
            <vmf-field-lbl v-bind:context="Context.LastName" v-model="Values.LastName"></vmf-field-lbl>
        </div>
        <div class="col-md-3">
            <vmf-field-lbl v-bind:context="Context.Age" v-model="Values.Age"></vmf-field-lbl>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <vmf-field-lbl v-bind:context="Context.Sex" v-model="Values.Sex"></vmf-field-lbl>
        </div>
        <div class="col-md-3">
            <vmf-field-lbl v-bind:context="Context.Sex" v-model="Values.Sex"></vmf-field-lbl>
        </div>

    </div>
</div>

<script type="text/javascript">

    var formData = {
        Values: {
            FirstName: 'Rafal',
            LastName: 'Kowalski',
            Age: 77,
            Sex: 'F'
        },
        Context: {
            FirstNameFld: {
                Label: 'Imię',
                FieldType: 'textfield',
                Access: 'Required'
            }, 
            LastName: {
                Label: 'Nazwisko',
                FieldType: 'textfield',
                Access: 'Required'
            },
            Age: {
                Label: 'Wiek',
                FieldType: 'numberfield',
                Access: 'ReadWrite'
            },
            Sex: {
                Label: 'Plec',
                FieldType: 'selectfield',
                Access: 'ReadWrite',
                Options: [
                    { Id: 'M', Label: 'Mezczyna' },
                    { Id: 'F', Label: 'Dziewczyna' }
                ]
            }
        }
    }

    var vm = new Vue({
        data: formData,
        el: document.getElementById('@id')
    });

    
</script>